{
  "name": "@react-earth/react-atom",
  "version": "0.1.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-earth/react-atom.git"
  },
  "scripts": {
    "release": "npm run release --workspaces && release-it",
    "app:install": "npm --prefix=app install",
    "app:start": "npm --prefix=app start"
  },
  "workspaces": [
    "packages/react-atom-core",
    "packages/react-atom-emotion",
    "packages/react-atom-styled"
  ],
  "devDependencies": {
    "@release-it/bumper": "^5.1.0",
    "release-it": "^16.2.1"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    }
  }
}
